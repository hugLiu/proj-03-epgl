@{
    ViewBag.Title = "新疆油气田开发规划图库管理平台-油田图册";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <!-- content type -->
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">

    <!-- viewport -->
    <meta content="width=device-width,initial-scale=1" name="viewport">

    <!-- title -->
    <title>新疆油田规划图形库二期 - 开发图册</title>

    <!-- add css -->
    <link href="~/Content/EPGL/css/pages/browsemode/style.css" rel="stylesheet" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            overflow: auto !important;
        }
        img {
            cursor: pointer;
        }
    </style>

</head>

<body class="content-body" oncontextmenu="return false" ondragstart="return false" onselectstart="return false" onselect="document.selection.empty()" oncopy="return false" onbeforecopy="return false" onmouseup="return false">

    <div data-bind="visible: shouldShow1">
        <img data-bind="attr:{src:imgUrl1}" style="float:right; width:400px;margin:10px" />
        <h1>(一)油藏位置</h1>
        <p data-bind="text:paragraph1"></p>

        <h1>(二)开发历程</h1>
        <!--ko foreach:paragraph2-->
        <p data-bind="text:$data"></p>
        <!--/ko-->
        <h1>(三)开采现状</h1>
        <p data-bind="text:paragraph3"></p>
    </div>

    <div data-bind="visible: shouldShow2">
        <div style="width:48%; float:left; margin:5px;">
            <img data-bind="attr:{src:imgUrl2}" style="float:left; width:260px;margin:5px" />
            <p data-bind="text:content1">
                
            </p>
        </div>

        <div style="width:48%; float:right; margin:5px;">
            <img data-bind="attr:{src:imgUrl3}" style="float:left; width:140px;height:320px;margin:5px" />
            <p data-bind="text:content2">
                
                <!--颗粒以次棱角状为主，半圆状次之，磨圆度较差，分选差，结构成熟度较低；胶结疏松～中等，胶结类型以接触-孔隙式为主，孔隙式和孔隙-接触式次之，这种岩石结构特征决定了储层微观结构复杂，物性较差。-->
            </p>
        </div>

        <div style="clear:both"></div>

        <div style="width:100%; margin:0px;">
            <img data-bind="attr:{src:imgUrl4}" style="float:left; width:400px;margin:-5 5 5 5" />
            <p data-bind="text:content3">               
            </p>
        </div>
        <div style="clear:both"></div>
    </div>

    <div data-bind="visible: shouldShow3">
        <div style="float:left; width:99%; float:right; margin:5px;">
            <img data-bind="attr:{src:imgUrl5}" style="float:left; width:320px;margin:0 35 0 10" />
            <h3 data-bind="text:head1"></h3>
            <p data-bind="text:content4">
                
            </p>
        </div>

        <div style="float:right; width:99%; margin:0px;">
            <img data-bind="attr:{src:imgUrl6}" style="float:right; width:340px;margin:-165 5 5 5" />
            <p data-bind="text:content5">
                
            </p>
        </div>
        <div style="clear:both"></div>
    </div>

    <div data-bind="visible: shouldShow4">
        <div style="width:49%; float:left; margin:5px; text-align:center">
            <h3>开发现状</h3>
            <img data-bind="attr:{src:imgUrl7}" style="width:400px;margin:5px" />
        </div>

        <div style="width:49%; float:left; margin:0px;">
            <h3>开发曲线</h3>
            <img data-bind="attr:{src:imgUrl8}" style="width:420px;margin:5 5 5 5" />
            <p data-bind="text:content6">
                
            </p>
        </div>
        <div style="clear:both"></div>
    </div>

    <div data-bind="visible: shouldShow5">
        <div style="width:49%; float:left; margin:5px; text-align:center">
            <h3>相渗曲线</h3>
            <img data-bind="attr:{src:imgUrl9}" style="width:400px;margin:5px" />
            <p data-bind="text:content7">
                
            </p>
        </div>

        <div style="width:49%; float:left; margin:0px;">
            <h3>毛管压力曲线</h3>
            <p data-bind="text:content8">
                
            </p>
            <img data-bind="attr:{src:imgUrl10}" style="width:420px;margin:5 5 5 5" />
        </div>
        <div style="clear:both"></div>
    </div>
    <script src="~/Content/EPGL/js/core/jquery-2.1.4.min.js"></script>
    <script src="~/Content/EPGL/js/core/knockout-3.0.0.js"></script>
    <script src="~/DemoData/bookdata/bookdata.js"></script>
<script type="text/javascript">
    var imgUrl = "/Content/EPGL/img/pages/browsemode/oilfield/reservoir/";

    var ContentOneModel = function (contentPage) {
        var self = this;
        self.shouldShow1 = ko.observable(true);
        self.shouldShow2 = ko.observable(false);
        self.shouldShow3 = ko.observable(false);
        self.shouldShow4 = ko.observable(false);
        self.shouldShow5 = ko.observable(false);

        self.imgUrl1 = ko.observable(imgUrl+contentPage.imgUrl1);
        self.paragraph1 = ko.observable(contentPage.paragraph1);
        self.paragraph2 = ko.observableArray(contentPage.paragraph2);
        self.paragraph3 = ko.observable(contentPage.paragraph3);


        self.imgUrl2 = ko.observable(imgUrl + contentPage.imgUrl2);
        self.content1 = ko.observable(contentPage.content1);
        self.imgUrl3 = ko.observable(imgUrl + contentPage.imgUrl3);
        self.content2 = ko.observable(contentPage.content2);
        self.imgUrl4 = ko.observable(imgUrl + contentPage.imgUrl4);
        self.content3 = ko.observable(contentPage.content3);


        self.imgUrl5 = ko.observable(imgUrl + contentPage.imgUrl5);
        self.head1 = ko.observable(contentPage.head1);
        self.content4 = ko.observable(contentPage.content4);
        self.imgUrl6 = ko.observable(imgUrl + contentPage.imgUrl6);
        self.head2 = ko.observable(contentPage.head2);
        self.content5 = ko.observable(contentPage.content5);

        self.imgUrl7 = ko.observable(imgUrl + contentPage.imgUrl7);
        self.imgUrl8 = ko.observable(imgUrl + contentPage.imgUrl8);
        self.content6 = ko.observable(contentPage.content6);

        self.imgUrl9 = ko.observable(imgUrl + contentPage.imgUrl9);
        self.content7 = ko.observable(contentPage.content7);
        self.imgUrl10 = ko.observable(imgUrl + contentPage.imgUrl10);
        self.content8 = ko.observable(contentPage.content8);

        self.changePage = function (index) {

            switch (index) {
            case "1":
                self.shouldShow1(true);
                self.shouldShow2(false);
                self.shouldShow3(false);
                self.shouldShow4(false);
                self.shouldShow5(false);
                break;
            case "2":
                self.shouldShow1(false);
                self.shouldShow2(true);
                self.shouldShow3(false);
                self.shouldShow4(false);
                self.shouldShow5(false);
                break;
            case "3":
                self.shouldShow1(false);
                self.shouldShow2(false);
                self.shouldShow3(true);
                self.shouldShow4(false);
                self.shouldShow5(false);
                break;
            case "4":
                self.shouldShow1(false);
                self.shouldShow2(false);
                self.shouldShow3(false);
                self.shouldShow4(true);
                self.shouldShow5(false);
                break;
            case "5":
                self.shouldShow1(false);
                self.shouldShow2(false);
                self.shouldShow3(false);
                self.shouldShow4(false);
                self.shouldShow5(true);
                break;
            default:
            }
        };
    };
    $(document).ready(function () {
        var oilFieldName='@Html.Raw(ViewBag.OilFieldName_Res)';
        var oilReservoirName='@Html.Raw(ViewBag.OilReservoirName)';
        var index = '@ViewBag.ResIndex';

        var currentModel = new ContentOneModel(bookData[oilFieldName]["oilReservoirs"][oilReservoirName].resContentPage);
        ko.applyBindings(currentModel);
        currentModel.changePage(index);

        $('img').on('click', function () {
            var src = $(this).attr('src');
            $(window.parent.document).find('.hidden-Bigimg img').attr('src', src);
            $(window.parent.document).find('.hidden-Bigimg').show(200);
        });
    });
</script>
</body>
</html>