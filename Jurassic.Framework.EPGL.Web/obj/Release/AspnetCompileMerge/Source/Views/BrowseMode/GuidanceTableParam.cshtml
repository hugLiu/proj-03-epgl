<script type="text/javascript">
    
    $(function () {
        var imgUrl = "/Content/EPGL/img/pages/browsemode/guidance/";

        var index = Number(@ViewBag.TableIndex);
        var imgIndex = Number(@ViewBag.ImageIndex);

        var src = imgUrl + tableParamData[index]["imgSrc"][imgIndex];
        $("img").attr("src", src);

        $('img').on('click',
            function () {
                $(window.parent.document).find('.hidden-Bigimg img').attr('src', src);
                $(window.parent.document).find('.hidden-Bigimg').show(200);

            });

    });
</script>
